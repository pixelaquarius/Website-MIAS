source "https://rubygems.org"

# Thêm dòng này để Vercel biết cần dùng Jekyll
gem "jekyll", "~> 4.3.3" 

# Thêm theme 'minimal-mistakes' mà bạn đang dùng
gem "minimal-mistakes-jekyll"

# Thêm TẤT CẢ các plugin từ file _config.yml của bạn
gem "jekyll-feed"
gem "jekyll-include-cache" # Đây chính là plugin gây lỗi
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
